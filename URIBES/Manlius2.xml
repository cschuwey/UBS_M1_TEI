        <front>
            <castList>
                <castItem  xml:id="torquatus">
                    <role>TORQUATUS</role>,
                    <roleDesc>Consul Romain</roleDesc>.
                </castItem>
                <castItem>
                    <role>MANLIUS</role>,
                    <roleDesc>Fils du Consul.</roleDesc>.
                </castItem>
                <castItem>
                    <role>CAMILLE</role>,
                    <roleDesc>Veuve de Decius.</roleDesc>.
                </castItem>
                <castItem>
                    <role>OMPHALE</role>,
                    <roleDesc>Princesse d'Épire captive des Romains.</roleDesc>.
                </castItem>
                <castItem>
                    <role>JUNIUS</role>,
                    <roleDesc>Ami de Torquatus.</roleDesc>.
                </castItem>
                <castItem>
                    <role>PHÉNICE</role>,
                    <roleDesc>Suivante d'Omphale.</roleDesc>.
                </castItem>
                <castItem>
                    <role>PISON</role>,
                    <roleDesc>Licteur.</roleDesc>.
                </castItem>
            </castList>
        </front>
        <body>
            <div1 type="act">
                <head>Acte II</head>
                <div2 type="scene">
                    <head>Scene V</head>
                    <stage type="setting">Torqu<damage agent="ink">a</damage>tus, Omphale, Phenice </stage>
                    <!-- stage c'est une didascalie, et type c'est pour le préciser-->
                    <!-- setting ça met la scène en place -->
                    <!-- damage c'est pour la tache et ink c'est pour l'encre-->
                    <sp who="#torquatus">
                        <speaker> TORQUATUS. </speaker>
                        <lg>
                            <l part="F">Quel sujet dans ce lieu vous <choice>
                                    <orig>ameine</orig>
                                    <reg>amène</reg>
                                </choice>?</l>
                            <!-- pour mettre des types qu'on sache que ce vers est plus court que les autres, pour faire les graphiques -->
                            <!-- choice = pour qu'on mette les deux, vieux et jeune, version originale et version régularisée-->
                            <l>Est-ce pitié, Madame, est-ce l'amour, est-ce la haine</l>
                        </lg>
                    </sp>
                    <sp>
                        <speaker> OMPHALE. </speaker>
                        <lg>
                            <l>C'est l'estime, Seignueur, que confèrent entre eux</l>
                            <l>Les plus grands ennemis, quand ils sont généreux</l>
                            <l>De l'injuste destin, la fière Barbarie</l>
                            <l> Me forçant malgé moy d'être votre ennemies.</l>
                        </lg>
                    </sp>
                </div2>
            </div1>
        </body>
    </text>
