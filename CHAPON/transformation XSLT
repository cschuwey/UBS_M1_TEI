<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:tei="http://www.tei-c.org/ns/1.0"
    exclude-result-prefixes="xs" version="2.0">
    <xsl:strip-space elements="*"/>
    
    <xsl:template match="tei:TEI">
        <html>
            <head>
                <meta charset="UTF-8"/>
                <title><xsl:apply-templates select="//tei:bibl[@xml:id='ed3']//tei:title"/></title>
            </head>
            <body>
                <h1><xsl:apply-templates select="//tei:head[@type='main'][ancestor::tei:div[@type='part' and @n='1']]"></xsl:apply-templates></h1>
                <h2>Titre de chapitre</h2>
                Nombre de remarque : <xsl:value-of select="count(//tei:div[@type='remark'])"/>
                <xsl:apply-templates select="//tei:div[@type='remark']/tei:p"/>
            </body>
        </html>
        
    </xsl:template>
    
    <xsl:template match="tei:p">
        <p><xsl:apply-templates/></p>
    </xsl:template>

    <xsl:template match="tei:app">
        <span style="color:red"><xsl:apply-templates select="tei:rdg[@source='#ed3']"/></span> <!--pas réussi à déplacer le paragraphe volant entre les éditions 3 et 5, à retenter-->
    </xsl:template>
    
    <xsl:template match="tei:div[@type='remark']">
        <xsl:number count="//tei:div[@type='remark']" format="1"></xsl:number> <!-- pour numéroter les remarques mais à tester sur oxygène -->
    </xsl:template>
    
</xsl:stylesheet>
