<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    xmlns:xs="http://www.w3.org/2001/XMLSchema"
    xmlns:tei="http://www.teic-c.org/ns/1.0"
    exclude-result-prefixes="xs" version="2.0">
    <xsl:strip-space elements="*"/>
    
    <xsl:template match="tei:TEI">
        <html>
            <head>
                <meta charset="UTF-8"/>
               
                <title><xsl:apply-templates select="//tei:teiHeader//tei:titleStmt/tei:title"/></title>
        </head>
        <body>
            
            <h1><xsl:apply-templates select="//tei:teiHeader//tei:titleStmt/tei:title"/></h1>
            
            <!--remarques-->
            <xsl:apply-templates select="//tei:div[@type='remark']"/>
            
            <h2>Bibliographie</h2>
           
            <xsl:apply-templates select="tei:teiHeader/tei:fileDesc/tei:sourceDesc/tei:bibl"/>
             
        </body>
        </html>
    </xsl:template>
    <xsl:template match="tei:div[@type='remark']">
        <div class="remark">
            <xsl:apply-templates/>
        </div>
    </xsl:template>
    
    <xsl:template match="tei:p">
    
    <p><xsl:apply-templates/></p>
    
    </xsl:template>
 
        <xsl:template match="tei:bibl">
    
    <xsl:apply-templates select="@xml:id"/> 
    <xsl:apply-templates select="tei:author"/>
    <xsl:apply-templates select="tei:title"/>
    <xsl:apply-templates select="tei:publisher"/> 
        
   </xsl:template>
</xsl:stylesheet>
